<?xml version="1.0" encoding="UTF-8"?>

<?import groovebox.ui.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="groovebox.ui.GrooveBoxController">
	<padding>
		<Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
	</padding>

	<HBox spacing="20.0">
		<PlayStopButton fx:id="playStopButton" onAction="#onStartStopButtonClicked"/>
		<SampleBeatMenu fx:id="sampleBeatMenu" mnemonicParsing="false" onAction="#onSampleBeatChanged" text="clear"/>
		<HBox>
			<Label text="BPM: "/>
			<TempoSpinner fx:id="tempoSpinner" editable="true" prefWidth="64.0"/>
		</HBox>
		<HBox>
			<Label text="Infinity Loop: "/>
			<InfinityLoopCheckBox fx:id="infinityLoopCheckBox"/>
		</HBox>
		<HBox>
			<Label text="Loop Count: "/>
			<LoopCountSpinner fx:id="loopCountSpinner" disable="${infinityLoopCheckBox.selected}" editable="true" prefWidth="64.0"/>
		</HBox>
	</HBox>
	<VBox>
		<ScrollPane prefViewportHeight="300" prefWidth="600">
			<InstrumentGridPane fx:id="instrumentGridPane"/>
		</ScrollPane>
		<StackPane prefHeight="44.0" prefWidth="600">
			<Pagination StackPane.alignment="CENTER" pageCount="5"/>
			<SplitMenuButton text="add" StackPane.alignment="CENTER_RIGHT">
				<items>
					<MenuItem text="delete"/>
				</items>
			</SplitMenuButton>
		</StackPane>
	</VBox>
</VBox>
